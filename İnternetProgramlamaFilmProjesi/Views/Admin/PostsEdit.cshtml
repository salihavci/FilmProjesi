@model İnternetProgramlamaFilmProjesi.Models.post
@{
    ViewBag.Title = "PostsEdit";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h2>Yorum Düzenleme</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="control-label col-md-2"><b>Kullanıcı Adı : </b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kullanici)
                @Html.ValidationMessageFor(model => model.kullanici)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Tarih : </b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tarih)
                @Html.ValidationMessageFor(model => model.tarih)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"><b>Yorum : </b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.yorum)
                @Html.ValidationMessageFor(model => model.yorum)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"><b>Onay : </b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.onay)
                @Html.ValidationMessageFor(model => model.onay)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Düzenle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Geri Dön", "Posts")
</div>

