@model İnternetProgramlamaFilmProjesi.Models.member
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Üye Girişi</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="control-label col-md-2"><b>Kullanıcı Adı : </b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kullanici)
                @Html.ValidationMessageFor(model => model.kullanici)
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"><b>Parola : </b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.parola)
                @Html.ValidationMessageFor(model => model.parola)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Giriş Yap" class="btn btn-default" /> | 
                <input type="reset" value="Temizle" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Üye Olmak için buraya tıklayın", "Register")
</div>

